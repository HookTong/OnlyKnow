<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ok_common_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/md_light_green_500"
    app:layout_collapseMode="pin"
    app:layout_scrollFlags="scroll|enterAlways"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <!-- 左侧控件 -->
    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_back_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="left"
        android:layout_marginRight="15dp"
        android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ok_common_toolbar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ellipsize="end"
        android:maxLength="15"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- 右侧控件 -->
    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_menu_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_search_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/sousuo"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_sendmessage_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/wenzhansend"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_edit_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/bianji"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_sharing_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_add_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/ok_add"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_addTp_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/add_image_white"
        android:visibility="gone" />

    <com.onlyknow.app.ui.view.OKSEImageView
        android:id="@+id/ok_common_toolbar_logout_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/dengchu"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/ok_common_toolbar_progressBar"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:indeterminateTint="@color/md_white_1000"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>
