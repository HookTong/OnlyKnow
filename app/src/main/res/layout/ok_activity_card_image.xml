<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/ok_content_common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/MESSAGE_top_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/MESSAGE_top_zhuye_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.onlyknow.app.ui.view.OKCircleImageView
                            android:id="@+id/MESSAGE_top_biaoti_imag"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/touxian_placeholder" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/MESSAGE_top_biaoti_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:ellipsize="end"
                                android:maxWidth="250dp"
                                android:singleLine="true"
                                android:text="@string/app_name"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/MESSAGE_top_qianmin_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:ellipsize="end"
                                android:maxWidth="350dp"
                                android:singleLine="true"
                                android:text="@string/app_name"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/MESSAGE_top_guanzhu_but"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape"
                            android:text="@string/message_guanzhu_but"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/xiantiao" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.onlyknow.app.ui.view.OKSEImageView
                            android:id="@+id/MESSAGE_top_zan_imag"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/zan" />

                        <TextView
                            android:id="@+id/MESSAGE_top_zan_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/md_light_blue_500"
                            android:textSize="12sp" />

                        <com.onlyknow.app.ui.view.OKSEImageView
                            android:id="@+id/MESSAGE_top_shouchang_imag"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/souchan" />

                        <TextView
                            android:id="@+id/MESSAGE_top_shouchang_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/md_light_blue_500"
                            android:textSize="12sp" />

                        <com.onlyknow.app.ui.view.OKSEImageView
                            android:id="@+id/MESSAGE_top_pinglun_imag"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pinglun" />

                        <TextView
                            android:id="@+id/MESSAGE_top_pinglun_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/md_light_blue_500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/xiantiao" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/MESSAGE_biaoqian_imag"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tag" />

                        <TextView
                            android:id="@+id/MESSAGE_biaoqian_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ok_activity_card_image_content_image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

                <ImageView
                    android:id="@+id/ok_activity_card_image_content_image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

                <ImageView
                    android:id="@+id/ok_activity_card_image_content_image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

                <ImageView
                    android:id="@+id/ok_activity_card_image_content_image4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

                <ImageView
                    android:id="@+id/ok_activity_card_image_content_image5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/ok_activity_card_image_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="作者保留所有权"
                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
